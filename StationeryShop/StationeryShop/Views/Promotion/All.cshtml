@{
	ViewBag.Title = "All";
}
@model IEnumerable<StationeryShop.Models.promotion>

<h2 class="heading">Tin khuyến mãi</h2>
@foreach (var p in Model)
{
	<div class="card mb-3">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="@p.image" class="img-fluid rounded-start h-100" alt="@p.name">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">@p.name</h5>
					<p class="card-text">@p.description</p>
					<p class="card-text">
						<small class="text-muted">
							<i class="bx bx-time"></i> Từ ngày @p.from_date.ToShortDateString() đến ngày @p.to_date.ToShortDateString()
						</small>
					</p>
					<a href="/Promotion/Index/@p.id" class="btn btn-primary">Xem chi tiết</a>
				</div>
			</div>
		</div>
	</div>
}
