@model StationeryShop.Models.customer
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutWithoutSidebar.cshtml";
}

<div class="account-info">
	<div class="container">
		<h1>THÔNG TIN TÀI KHOẢN</h1>
		<div class="row">
			<div class="col-12 col-md-4">
				@{ Html.RenderAction("AccountMenu");}
			</div>
			<div class="col-12 col-md-8">
				<div class="form-update">
					<h2>THÔNG TIN TÀI KHOẢN</h2>
					@if (ViewBag.success!=null)
					{
						<div class="mb-2 alert alert-success">
							Thông tin được cập nhật!
						</div>
					}
					<form action="/Account/UpdateInfo" method="post">
						<label for="name" class="form-label">Họ và tên</label>
						<div class="input-group mb-3">
							<span class="input-group-text">
								<i class="bx bx-user"></i>
							</span>
							<input id="name"
										 type="text"
										 name="name"
										 placeholder="Họ và tên..."
										 class="form-control"
										 value="@Model.name"
										 required />
						</div>
						<label for="email" class="form-label">Email</label>
						<div class="input-group mb-3">
							<span class="input-group-text">
								<i class="bx bx-envelope"></i>
							</span>
							<input id="email"
										 readonly
										 type="email"
										 name="email"
										 placeholder="Email..."
										 value="@Model.email"
										 class="form-control" />
						</div>
						<label for="tel" class="form-label">Điện thoại</label>
						<div class="input-group mb-3">
							<span class="input-group-text">
								<i class="bx bx-phone"></i>
							</span>
							<input id="tel"
										 type="tel"
										 name="tel"
										 value="@Model.tel"
										 placeholder="Điện thoại..."
										 class="form-control" />
						</div>
						<label for="address" class="form-label">Địa chỉ</label>
						<div class="input-group mb-3">
							<span class="input-group-text">
								<i class="bx bx-home"></i>
							</span>
							<input id="address"
										 type="text"
										 value="@Model.address"
										 name="address"
										 placeholder="Địa chỉ..."
										 class="form-control" />
						</div>
						<div class="form-action">
							<button type="reset" class="btn btn-secondary">Làm lại</button>
							<button type="submit" class="btn btn-primary">
								Cập nhật
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

